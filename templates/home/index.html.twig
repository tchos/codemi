{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="card mt-4">
                        <div class="card-header p-3">
                            <h5 class="mb-0">CODEMI</h5>
                            <p class="text-sm mb-0">
                                Cette application permet d'enregistrer, de rechercher, lister, modifier et supprimer les copies
                                numérisées des décisions déclarant un agent de l'Etat invalide.
                            </p>
                        </div>
                        <div class="card-body p-3">
                            <div class="row">
                                <div class="col-lg-6 col-sm-6 col-12">
                                    <a href="{{ path('app_decisions_new') }}" class="btn bg-gradient-success w-100 mb-0 toast-btn"
                                       type="button" data-target="successToast">
                                        Enregistrer une nouvelle décision
                                    </a>
                                </div>
                                <div class="col-lg-6 col-sm-6 col-12 mt-sm-0 mt-2">
                                    <a href="{{ path('app_decisions_index') }}" class="btn bg-gradient-info w-100 mb-0 toast-btn"
                                       type="button" data-target="infoToast">
                                        Voir la liste de toutes les décision
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
